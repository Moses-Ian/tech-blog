<form class="login-form">
  <div class="labels">
    <label for="email-login">email:</label>
    <label for="password-login">password:</label>
  </div>
  <div class="inputs">
    <input type="text" id="email-login" class="input"/>
    <input type="password" id="password-login" class="input"/>
  </div>
  <div class="submit">
    <button type="submit" class="center">login</button>
  </div>
</form>

<form class="signup-form">
  <div class="labels">
    <label for="username-signup">username:</label>
    <label for="email-signup">email:</label>
    <label for="password-signup">password:</label>
  </div>
  <div class="inputs">
    <input type="text" id="username-signup" class="input"/>
    <input type="text" id="email-signup" class="input"/>
    <input type="password" id="password-signup" class="input"/>
  </div>
  <div class="submit">
    <button type="submit" class="center">signup</button>
  </div>
</form>

<script src="/js/login.js"></script>