<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div class="form-title">
      <label for="post-title">Title:</label>
      <input type="text" id="post-title" name="post-title" class="form-title-input" />
    </div>
    <div class="form-content">
      <textarea id="content" name="content" rows="4" class="form-content-input"></textarea>
    </div>
    <button type="submit" class="btn center">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ul>
    {{#each posts as |post|}}
    <li class="li-post">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit/Delete post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/js/add-post.js"></script>